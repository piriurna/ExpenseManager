<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.ExpenseManager.Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.ExpenseManager.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.ExpenseManager.LightInputLayout" parent="Widget.ExpenseManager.TextInputLayout">
        <item name="boxStrokeColor">@color/light_input_text</item>
        <item name="android:textColorHint">@color/light_hint_layout</item>
        <item name="hintTextColor">@color/light_hint_layout</item>
    </style>

    <style name="Widget.ExpenseManager.LightEditText" parent="Widget.ExpenseManager.TextInputLayout">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.ExpenseManager.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="tint">@color/black</item>
    </style>

    <style name="BigTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BigTitle.description" parent="BigTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BigTitle.amount" parent="BigTitle">
        <item name="android:textSize">48sp</item>
    </style>
</resources>